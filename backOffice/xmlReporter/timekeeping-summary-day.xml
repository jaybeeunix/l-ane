<?xml version="1.0" encoding="US-ASCII" standalone="yes"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xmlns:rpt="http://l-ane.net/l-ane-xml/xmlReporter0">

<rpt:promptset>
   <rpt:prompt textKey='Lane/BackOffice/Reports/Timekeeping Summary/Day/Title' textDefault='Daily Timekeeping Summary' variable='title' type='fixed'/>
   <rpt:prompt textKey='Lane/BackOffice/Reports/Timekeeping Summary/Day/Date' textDefault='Date' variable='date' type='date'/>
</rpt:promptset>

<head>
<title>L&#x2019;&#xe2;ne Daily Timekeeping Summary: <rpt:output value='UserInterface.date' format='shortDate'/></title>
<style>
body
{
   font-family: Times, Serif;
   font-size: 12pt;
   background-color: white;
   color: black;
   margin-left: 5%;
   margin-right: 5%;
   width: 90%;
}
span.descr
{
/*   font-style: italic;*/
   font-weight: bold;
}
span.void
{
/*   font-style: italic;
   font-weight: bold;*/
   color: red;
   text-decoration: line-through;
}
table.body
{
   text-align: right;
   width: 100%;
   border-collapse: collapse;
}
table.body thead tr td
{
   border-style: solid;
   border-width: thin;
   font-weight: bold;
   text-align: left;
}
table.body tbody tr td
{
   border-left-style: solid;
   border-left-width: thin;
   border-right-style: solid;
   border-right-width: thin;
}
table.body tbody tr td.noBorder
{
   border-style: none;
}
table.body tbody tr.summaryMiddle td
{
   border-left-style: solid;
   border-left-width: thin;
   border-right-style: solid;
   border-right-width: thin;
   border-top-style: hidden;
   border-bottom-style: hidden;
}
table.body tbody tr.summaryBottom td
{
   border-left-style: solid;
   border-left-width: thin;
   border-right-style: solid;
   border-right-width: thin;
   border-top-style: hidden;
   border-bottom-style: solid;
   border-bottom-width: thin;
}
.forceLeft
{
   text-align: left;
}
</style>
</head>

<body>
  <h1>Daily Timekeeping Summary for <rpt:output value='UserInterface.date' format='shortDate'/></h1>
  <table class='body' width='100%'>
    <thead>
    <tr><td>Employee #</td><td>Name</td><td>Total Hrs</td><td>Punches</td></tr>
    </thead>
    <tbody>
  <rpt:call object='Timeclock' method='getBoundsForDate' argument0='UserInterface.date' context='array'/>
  <rpt:call object='Reporter' method='set' argument0='Constant.start' argument1='Reporter.0'/>
  <rpt:call object='Reporter' method='set' argument0='Constant.end' argument1='Reporter.1'/>
  <rpt:call object='Timeclock' method='getAllClerksInSpan' argument0='Reporter.start' argument1='Reporter.end' context='array'/><rpt:foreach set='Reporter.lastCall' element='emp'>
  <tr><td><rpt:output value='emp.id'/></td><td class='forceLeft'><rpt:output value='emp.name'/></td><td><rpt:call object='Timeclock' method='getHoursInSpan' argument0='emp.id' argument1='Reporter.start' argument2='Reporter.end' /><rpt:output value='Reporter.lastCall'/><rpt:call object='Timeclock' method='isClockedIn' argument0='emp.id' argument1='UserInterface.date'/><rpt:if subject='Reporter.lastCall' verb='istrue'>(Still Clocked In)</rpt:if></td>
  <td class='forceLeft'>
    <rpt:call object='Timeclock' method='getAllPunchesInSpan' argument0='emp.id' argument1='Reporter.start' argument2='Reporter.end' context='array'/><rpt:foreach set='Reporter.lastCall' element='punch'><rpt:call object='Timeclock' method='open' argument0='emp.id' argument1='punch.value'/><rpt:if subject='Timeclock.voidAt' verb='istrue' ><span class='void'><rpt:output value='punch.value' format='shortTime'/></span></rpt:if><rpt:if subject='Timeclock.voidAt' verb='isfalse'><rpt:output value='punch.value' format='shortTime'/></rpt:if>, </rpt:foreach>
  </td>
  <!--<rpt:call object='' format=''/>-->
  </tr>
</rpt:foreach>
      <tr class='summaryBottom'><td colspan='5'/></tr>

    </tbody>
  </table>
  <p>Generated by <rpt:output value='Reporter.user'/> @ <rpt:call object='Reporter' method='now'/><rpt:output value='Reporter.lastCall' format='shortTimestamp'/></p>
</body>
</html>

<body>
<h1>Products to Reorder </h1>

<rpt:call object='Product' method='getUnderstocked' context='array'/>
<table class='body'>
  <thead>
    <tr><td>ID</td><td>Description</td><td>On Hand</td><td>Minimum</td><td>Reorder</td></tr>
  </thead>
  <tbody>
    <rpt:foreach set='Reporter.lastCall' element='s'><rpt:call object='Product' method='open' argument0='s.value'/><rpt:if subject='Reporter.lastCall' verb='==' object='Constant.1'><tr><td><rpt:output value='Product.id'/></td><td><rpt:output value='Product.descr'/></td><td><rpt:output value='Product.onHand'/></td><td><rpt:output value='Product.minimum'/></td><td><rpt:output value='Product.reorder'/></td></tr></rpt:if></rpt:foreach>
  </tbody>
</table>
<p style='font-weight: normal; font-size: smaller;'>Generated by <rpt:output value='Reporter.user'/> @ <rpt:call object='Reporter' method='today'/><rpt:output value='Reporter.today' format='shortDate'/></p>
</body>

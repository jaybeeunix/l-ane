<?xml version="1.0" encoding="US-ASCII" standalone="yes"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xmlns:rpt="http://l-ane.net/l-ane-xml/xmlReporter0">

<head>
<title>L&#x2019;&#xe2;ne All Unpaid Tickets</title>
<style>
body
{
   font-family: Times, Serif;
   font-size: 12pt;
   background-color: white;
   color: black;
   margin-left: 5%;
   margin-right: 5%;
   width: 90%;
}
span.descr
{
/*   font-style: italic;*/
   font-weight: bold;
}
table.body
{
   text-align: right;
   width: 100%;
   border-collapse: collapse;
}
table.body thead tr td
{
   border-style: solid;
   border-width: thin;
}
table.body tbody tr td
{
   border-left-style: solid;
   border-left-width: thin;
   border-right-style: solid;
   border-right-width: thin;
}
table.body tbody tr td.noBorder
{
   border-style: none;
}
table.body tbody tr.summaryMiddle td
{
   border-left-style: solid;
   border-left-width: thin;
   border-right-style: solid;
   border-right-width: thin;
   border-top-style: hidden;
   border-bottom-style: hidden;
}
table.body tbody tr.summaryBottom td
{
   border-left-style: solid;
   border-left-width: thin;
   border-right-style: solid;
   border-right-width: thin;
   border-top-style: hidden;
   border-bottom-style: solid;
   border-bottom-width: thin;
}
.forceLeft
{
   text-align: left;
}
</style>
</head>

<body>
  <h1>All Unpaid Tickets</h1>
  <table class='body' width="100%">
    <thead>
    <tr><td>Inv #</td><td>Date</td><td>Amount</td><td>Customer ID</td><td class='forceLeft'>Customer Name</td></tr>
    </thead>
    <tbody>
  <rpt:call object="Sale" method="getAllNotPaid" context='array'/><rpt:foreach set="Reporter.lastCall" element="ticket">
    <rpt:call object='Sale' method='open' argument0='ticket.value'/>
    <rpt:if subject='Reporter.lastCall' verb='==' object='Constant.1'><tr><td><rpt:output value='Sale.id'/></td><td><rpt:output value='Sale.tranzDate' format='shortDate'/></td><td><rpt:output value='Sale.total' format='money'/></td><td><rpt:output value='Sale.customer'/></td><td class='forceLeft'><rpt:call object='Customer' method='open' argument0='Sale.customer'/><rpt:call object='Customer' method='getName' argument0='Sale.customer'/><rpt:output value='Reporter.lastCall'/></td></tr></rpt:if>
  </rpt:foreach>
    <tr class='summaryBottom'><td colspan='5'/></tr>
    </tbody>
  </table>
  <p>Generated by <rpt:output value='Reporter.user'/> @ <rpt:call object='Reporter' method='now'/><rpt:output value='Reporter.lastCall' format='shortTimestamp'/></p>
</body>
</html>
